# Overleaf Production Environment Configuration
# Copy this file to .env and update the values for your deployment

# Domain Configuration
DOMAIN=your-domain.com
OVERLEAF_SITE_URL=https://your-domain.com

# Application Configuration
OVERLEAF_NAV_TITLE=Overleaf Community Edition
OVERLEAF_ADMIN_EMAIL=admin@your-domain.com

# Email Configuration (Optional but recommended)
OVERLEAF_EMAIL_FROM_ADDRESS=noreply@your-domain.com
OVERLEAF_EMAIL_SMTP_HOST=smtp.your-email-provider.com
OVERLEAF_EMAIL_SMTP_PORT=587
OVERLEAF_EMAIL_SMTP_SECURE=false
OVERLEAF_EMAIL_SMTP_USER=your-smtp-username
OVERLEAF_EMAIL_SMTP_PASS=your-smtp-password
OVERLEAF_EMAIL_SMTP_TLS_REJECT_UNAUTH=true

# Security Configuration
OVERLEAF_SECURE_COOKIE=true
REDIS_PASSWORD=your-secure-redis-password

# SSL/ACME Configuration (for automatic SSL with Let's Encrypt)
ACME_EMAIL=admin@your-domain.com

# Optional: Database Configuration
# MONGO_INITDB_ROOT_USERNAME=admin
# MONGO_INITDB_ROOT_PASSWORD=your-secure-mongo-password

# Optional: Custom Headers and Footer
# OVERLEAF_HEADER_IMAGE_URL=https://your-domain.com/logo.png
# OVERLEAF_LEFT_FOOTER=[{"text": "Custom footer text"}]
# OVERLEAF_RIGHT_FOOTER=[{"text": "Your organization name"}]

# Docker Configuration
COMPOSE_PROJECT_NAME=overleaf-production
